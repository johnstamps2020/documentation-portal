{
  "name": "documentation-portal-monorepo",
  "version": "1.0.2",
  "private": true,
  "repository": "ssh://git@stash.guidewire.com/doctools/documentation-portal.git",
  "license": "UNLICENSED",
  "author": "Doc Tools <doctools@guidewire.com>",
  "main": "index.js",
  "workspaces": [
    "server",
    "landing-pages",
    "docusaurus/doc-site",
    "docusaurus/test-site",
    "docusaurus/plugins/gw-plugin-redoc",
    "docusaurus/plugins/docusaurus-security",
    "docusaurus/themes/gw-theme-classic",
    "html5",
    "scripts",
    "ci/uploadLegacyConfigsToDb",
    "components"
  ],
  "scripts": {
    "audit:all": "yarn npm audit --all --severity high",
    "build": "yarn build:components && yarn build:server && yarn build:landing-pages",
    "build:components": "yarn workspace @doctools/components build",
    "build:doc-site": "yarn build:docusaurus-security && yarn build:theme && yarn workspace doc-site build",
    "build:html5": "yarn build:components && yarn build:server && yarn workspace html5 build",
    "build:html5-offline": "yarn build:components && yarn build:server && yarn workspace html5 build-offline",
    "build:landing-pages": "yarn scripts:get-root-breadcrumbs && yarn workspace @doctools/landing-pages build",
    "build:plugin-redoc": "yarn build:components && yarn build:server && yarn workspace @doctools/gw-plugin-redoc build",
    "build:docusaurus-security": "yarn workspace @doctools/docusaurus-security build",
    "build:server": "yarn workspace @doctools/server build",
    "build:theme": "yarn build:components && yarn build:server && yarn workspace @doctools/gw-theme-classic build",
    "dev": "yarn build:server && concurrently --kill-others-on-fail \"yarn dev:server\" \"yarn dev:landing-pages\"",
    "dev:components": "NODE_ENV=development yarn workspace @doctools/components dev",
    "dev:doc-site": "NODE_ENV=development yarn workspace doc-site dev",
    "dev:html5": "NODE_ENV=development yarn workspace html5 dev",
    "dev:html5-offline": "NODE_ENV=development yarn workspace html5 dev-offline",
    "dev:landing-pages": "yarn workspace @doctools/landing-pages start",
    "dev:plugin-redoc": "NODE_ENV=development yarn build:plugin-redoc && yarn workspace @doctools/gw-plugin-redoc dev",
    "dev:docusaurus-security": "NODE_ENV=development yarn build:docusaurus-security && yarn workspace @doctools/docusaurus-security dev",
    "dev:server": "yarn workspace @doctools/server dev",
    "dev:test-site": "NODE_ENV=development yarn workspace test-site dev",
    "dev:theme": "NODE_ENV=development yarn workspace @doctools/gw-theme-classic dev",
    "pages:test-site": "yarn build:plugin-redoc && yarn workspace test-site pages",
    "prettier": "prettier --write .",
    "prettier:landing-pages": "prettier landing-pages/src/pages --write",
    "profile:html5": "yarn build:theme && yarn workspace html5 profile",
    "publish:components": "yarn workspace @doctools/components npm publish --tolerate-republish",
    "publish:plugin-redoc": "yarn workspace @doctools/gw-plugin-redoc npm publish --tolerate-republish",
    "publish:docusaurus-security": "yarn workspace @doctools/docusaurus-security npm publish --tolerate-republish",
    "publish:theme": "yarn workspace @doctools/gw-theme-classic npm publish --tolerate-republish",
    "scripts:create-translation-kit": "yarn workspace @doctools/scripts create-translation-kit",
    "scripts:set-downloadable-build-params": "yarn workspace @doctools/scripts set-downloadable-build-params",
    "scripts:collect-pdfs": "yarn workspace @doctools/scripts collect-pdfs",
    "scripts:get-root-breadcrumbs": "yarn workspace @doctools/scripts get-root-breadcrumbs",
    "scripts:migrate-pages": "yarn workspace @doctools/scripts migrate-pages && yarn prettier:landing-pages",
    "scripts:replace-url-with-doc-id": "yarn workspace @doctools/scripts replace-url-with-doc-id && yarn prettier:landing-pages",
    "test": "yarn test:server && yarn test:landing-pages",
    "test:landing-pages": "yarn build && yarn workspace @doctools/landing-pages test",
    "test:server": "yarn workspace @doctools/server test"
  },
  "resolutions": {
    "@xmldom/xmldom": "0.8.6",
    "got": "11.8.5",
    "json5": "^2.2.2",
    "jsonwebtoken": "^9.0.0",
    "minimist": "^1.2.6",
    "terser": "5.14.2"
  },
  "dependencies": {
    "concurrently": "7.4.0"
  },
  "devDependencies": {
    "prettier": "^2.8.4"
  },
  "packageManager": "yarn@4.3.1",
  "engines": {
    "node": ">=18.0.0"
  }
}
