{
  "name": "documentation-portal-monorepo",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "ssh://git@stash.guidewire.com/doctools/documentation-portal.git",
  "author": "Doc Tools <doctools@guidewire.com>",
  "license": "UNLICENSED",
  "private": true,
  "packageManager": "yarn@3.4.1",
  "workspaces": [
    "server",
    "landing-pages",
    "docusaurus/doc-site",
    "docusaurus/test-site",
    "docusaurus/plugins/gw-plugin-redoc",
    "docusaurus/themes/gw-theme-classic",
    "docusaurus/vite-project",
    "html5",
    "scripts",
    "ci/uploadLegacyConfigsToDb"
  ],
  "scripts": {
    "audit:all": "yarn npm audit --all --severity high",
    "build:doc-site": "yarn build:theme && yarn workspace doc-site build",
    "build:html5": "yarn build:theme && yarn workspace html5 build",
    "build:html5-offline": "yarn build:theme && yarn workspace html5 build-offline",
    "build:plugin": "yarn workspace @doctools/gw-plugin-redoc build",
    "build:theme": "yarn workspace @doctools/gw-theme-classic build",
    "dev:doc-site": "NODE_ENV=development yarn workspace doc-site dev",
    "dev:html5": "NODE_ENV=development yarn workspace html5 dev",
    "dev:html5-offline": "NODE_ENV=development yarn workspace html5 dev-offline",
    "dev:plugin": "NODE_ENV=development yarn build:plugin && yarn workspace @doctools/gw-plugin-redoc dev",
    "dev:test-site": "NODE_ENV=development yarn workspace test-site dev",
    "dev:theme": "NODE_ENV=development yarn workspace @doctools/gw-theme-classic dev",
    "server-build": "yarn workspace server build",
    "landing-pages-build": "yarn workspace landing-pages build",
    "landing-pages-dev": "yarn workspace landing-pages start",
    "server-dev": "yarn workspace server dev",
    "dev": "yarn server-build && concurrently --kill-others-on-fail \"yarn server-dev\" \"yarn landing-pages-dev\"",
    "build": "yarn server-build && yarn landing-pages-build",
    "pages:test-site": "yarn build:plugin && yarn workspace test-site pages",
    "prettier": "prettier --write .",
    "test:server": "yarn workspace server test",
    "test:landing-pages": "yarn workspace landing-pages test",
    "test": "yarn test:server && yarn test:landing-pages",
    "scripts:migrate-pages": "yarn workspace scripts migrate-pages && prettier landing-pages/src/pages/landing --write",
    "profile:html5": "yarn build:theme && yarn workspace html5 profile"
  },
  "resolutions": {
    "minimist": "^1.2.6",
    "html-select": "2.3.24",
    "terser": "5.14.2",
    "@xmldom/xmldom": "0.8.6",
    "jsonwebtoken": "^9.0.0",
    "json5": "^2.2.2",
    "got": "11.8.5",
    "trim": "1.0.1"
  },
  "dependencies": {
    "concurrently": "7.4.0",
    "express-fileupload": "^1.4.0",
    "jest-watch-typeahead": "0.6.5",
    "react-error-boundary": "^4.0.10",
    "swr": "^2.0.3"
  },
  "devDependencies": {
    "@types/harmon": "^1.4.1",
    "prettier": "^2.8.4"
  }
}
