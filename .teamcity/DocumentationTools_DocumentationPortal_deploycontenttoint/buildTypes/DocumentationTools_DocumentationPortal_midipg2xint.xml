<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://www.jetbrains.com/teamcity/schemas/2018.1/project-config.xsd">
  <name>Build Guidewire InsuranceSuite Package for Germany Cloud 2.x (midipg2x)</name>
  <description />
  <settings>
    <inherits>
      <ref id="DocumentationTools_DocumentationPortal_CrawlDocumentAndUpdateIndex" />
      <ref id="DocumentationTools_DocumentationPortal_PublishBrokenLinksReportToS3" />
    </inherits>
    <options>
      <option name="cleanBuild" value="true" />
      <option name="maximumNumberOfBuilds" value="1" />
    </options>
    <parameters>
      <param name="APP_BASE_URL" value="https://docs.int.ccs.guidewire.net" spec="text validationMode='not_empty'" />
      <param name="CONFIG_FILE_URL" value="https://ditaot.internal.int.ccs.guidewire.net/portal-config/config.json" spec="text validationMode='not_empty'" />
      <param name="DOC_ID" value="midipg2x" spec="text validationMode='not_empty'" />
      <param name="DOC_S3_URL" value="https://ditaot.internal.int.ccs.guidewire.net" spec="text validationMode='not_empty'" />
      <param name="ELASTICSEARCH_URLS" value="https://docsearch-doctools.int.ccs.guidewire.net" spec="text validationMode='not_empty'" />
      <param name="INDEX_NAME" value="gw-docs" spec="text validationMode='not_empty'" />
      <param name="TOOLS_ROOT" value="tools_root" spec="text validationMode='not_empty'" />
      <param name="env.DITAVAL_FILE" value="GW-Generic-Draft.ditaval" spec="text validationMode='not_empty'" />
      <param name="env.FORMAT" value="webhelp_Guidewire_validate" spec="text validationMode='not_empty'" />
      <param name="env.INPUT_PATH" value="_superbook.ditamap" spec="text validationMode='not_empty'" />
      <param name="env.PDF_TRANSTYPE" value="" spec="text validationMode='regex'" />
      <param name="env.PLATFORM" value="Cloud" spec="text validationMode='not_empty'" />
      <param name="env.PRODUCT" value="Guidewire InsuranceSuite Package for Germany" spec="text validationMode='not_empty'" />
      <param name="env.PUBLISH_PATH" value="cloud/mid/ipg/latest" spec="text validationMode='not_empty'" />
      <param name="env.S3_BUCKET_NAME" value="tenant-doctools-int-builds" spec="text validationMode='not_empty'" />
      <param name="env.SOURCES_ROOT" value="src_root" spec="text validationMode='not_empty'" />
      <param name="env.SSH_PASSWORD" value="credentialsJSON:a547ee60-435e-47c3-901e-a1255a38dd3b" spec="password" />
      <param name="env.SSH_USER" value="ssh_user" spec="text validationMode='not_empty'" />
      <param name="env.VERSION" value="2.x" spec="text validationMode='not_empty'" />
    </parameters>
    <build-runners order="RUN_DITA_BUILD, UPLOAD_GENERATED_CONTENT, BUILD_CRAWLER_DOCKER_IMAGE, CRAWL_DOC, PUBLISH_BROKEN_LINK">
      <runner id="RUN_DITA_BUILD" name="Run DITA build" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[chmod -R 777 ./
%env.DITA_OT_DIR%/bin/dita --install

%env.DITA_OT_DIR%/bin/dita --input="%env.SOURCES_ROOT%/%env.INPUT_PATH%" --format=%env.FORMAT% --use-doc-portal-params=yes --gw-product="%env.PRODUCT%" --gw-platform="%env.PLATFORM%" --gw-version="%env.VERSION%" --filter="%env.SOURCES_ROOT%/GW-Generic-Draft.ditaval"]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="UPLOAD_GENERATED_CONTENT" name="Upload generated content to the S3 bucket" type="simpleRunner">
        <parameters>
          <param name="script.content" value="aws s3 sync ./out s3://%env.S3_BUCKET_NAME%/%env.PUBLISH_PATH% --delete" />
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="DocumentationTools_DitaOtPlugins">
        <checkout-rule rule="+:. =&gt; ./%env.DITA_OT_PLUGINS_DIR%" />
      </vcs-entry-ref>
      <vcs-entry-ref root-id="midipgdraftsrc">
        <checkout-rule rule="+:. =&gt; %env.SOURCES_ROOT%" />
      </vcs-entry-ref>
    </vcs-settings>
    <requirements />
    <build-triggers>
      <build-trigger id="TRIGGER_1" type="vcsTrigger">
        <parameters>
          <param name="branchFilter" value="+:*" />
          <param name="enableQueueOptimization" value="true" />
          <param name="quietPeriodMode" value="DO_NOT_USE" />
          <param name="triggerRules"><![CDATA[-:root=DocumentationTools_DocumentationPortal_vcsrootmasteronly:**
-:root=DocumentationTools_DitaOtPlugins:**]]></param>
        </parameters>
      </build-trigger>
    </build-triggers>
    <build-extensions>
      <extension id="DockerSupport" type="DockerSupport">
        <parameters>
          <param name="login2registry" value="PROJECT_EXT_155" />
          <param name="loginCheckbox" value="on" />
        </parameters>
      </extension>
    </build-extensions>
    <dependencies>
      <depend-on sourceBuildTypeId="DocumentationTools_DocumentationPortal_TestContent">
        <options>
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
      <depend-on sourceBuildTypeId="DocumentationTools_DocumentationPortal_TestConfig">
        <options>
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
    </dependencies>
    <cleanup />
  </settings>
</build-type>

