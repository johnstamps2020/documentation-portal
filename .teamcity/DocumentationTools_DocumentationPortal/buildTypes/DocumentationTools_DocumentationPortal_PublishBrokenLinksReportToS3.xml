<?xml version="1.0" encoding="UTF-8"?>
<template xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://www.jetbrains.com/teamcity/schemas/2018.1/project-config.xsd">
  <name>Publish the broken link report to S3</name>
  <settings>
    <parameters>
      <param name="env.PUBLISH_PATH" value="%PUBLISH_PATH%" spec="text validationMode='not_empty'" />
      <param name="env.S3_BUCKET_NAME" value="%S3_BUCKET_NAME%" spec="text validationMode='not_empty'" />
      <param name="env.TOOLS_ROOT" value="%TOOLS_ROOT%" spec="text validationMode='not_empty'" />
    </parameters>
    <build-runners>
      <runner id="PUBLISH_BROKEN_LINK" name="Publish broken link report to S3" type="simpleRunner">
        <parameters>
          <param name="script.content" value="aws s3 sync ./apps/search_indexer/out s3://%env.S3_BUCKET_NAME%/broken-links-reports/%env.PUBLISH_PATH% --delete" />
          <param name="teamcity.build.workingDir" value="%env.TOOLS_ROOT%" />
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings />
    <requirements />
    <build-triggers />
    <cleanup />
  </settings>
</template>

