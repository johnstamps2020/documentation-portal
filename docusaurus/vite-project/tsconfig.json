{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["@doctools/gw-theme-classic"],
    "baseUrl": ".",
    "paths": {
      "/@theme/*": ["./node_modules/@doctools/gw-theme-classic/src/theme"]
    }
  },
  "include": ["src", "./node_modules/@doctools/gw-theme-classic/src/theme"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
