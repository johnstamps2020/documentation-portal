  "version": "0.2.0",
  "configurations": [
    {
      "name": "Migrate pages from legacy config to JSX",
      "command": "yarn scripts:migrate-pages",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "type": "node-terminal"
    },
    {
      "name": "Server DEV",
      "command": "yarn server-dev",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "type": "node-terminal",
      "preLaunchTask": "Start docportal DB"
    },
    {
      "name": "Landing pages DEV",
      "command": "yarn landing-pages-dev",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "type": "node-terminal"
    },
    {
      "name": "Upload legacy configs to DB",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/ci",
      "command": "node uploadLegacyConfigsToDb.mjs",
      "envFile": "${workspaceFolder}/server/.env"
    }
  ]
}
