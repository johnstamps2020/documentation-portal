  "version": "0.2.0",
  "configurations": [
    {
      "name": "Migrate pages from legacy config to JSX",
      "command": "yarn scripts:migrate-pages",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "type": "node-terminal"
    },
    {
      "name": "Server DEV",
      "command": "yarn dev:server",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "type": "node-terminal"
    },
    {
      "name": "Landing Pages DEV",
      "command": "yarn dev:landing-pages",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "type": "node-terminal"
    },
    {
      "name": "doc-site DEV",
      "command": "yarn dev:doc-site",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "type": "node-terminal",
      "preLaunchTask": "theme DEV"
    },
    {
      "name": "test-site DEV",
      "command": "yarn dev:test-site",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "type": "node-terminal",
      "preLaunchTask": "plugin DEV"
    },
    {
      "name": "Upload legacy configs to DB",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/ci/uploadLegacyConfigsToDb",
      "command": "node uploadLegacyConfigsToDb.mjs",
      "envFile": "${workspaceFolder}/server/.env"
    }
  ]
}
