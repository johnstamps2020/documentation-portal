{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start docportal DB",
      "type": "docker-run",
      "platform": "node",
      "dockerRun": {
        "image": "artifactory.guidewire.com/hub-docker-remote/postgres:14.1-alpine",
        "containerName": "docportal-db",
        "ports": [
          {
            "hostPort": 5432,
            "containerPort": 5432,
            "protocol": "tcp"
          }
        ],
        "volumes": [
          {
            "localPath": "${workspaceFolder}/.dev/volumes/containers/docportal-db",
            "containerPath": "/var/lib/postgresql/data",
            "permissions": "rw"
          }
        ],
        "env": {
          "PGDATA": "/var/lib/postgresql/data/pgdata",
          "POSTGRES_PASSWORD": "testtesttest",
          "POSTGRES_USER": "postgres"
        }
      }
    },
    {
      "label": "Start docportal search",
      "type": "docker-run",
      "platform": "node",
      "dockerRun": {
        "image": "artifactory.guidewire.com/hub-docker-remote/elasticsearch:7.17.4",
        "containerName": "docportal-search",
        "ports": [
          {
            "hostPort": 9200,
            "containerPort": 9200,
            "protocol": "tcp"
          },
          {
            "hostPort": 9300,
            "containerPort": 9300,
            "protocol": "tcp"
          }
        ],
        "volumes": [
          {
            "localPath": "${workspaceFolder}/.dev/volumes/containers/docportal-search",
            "containerPath": "/usr/share/elasticsearch/data",
            "permissions": "rw"
          }
        ],
        "env": {
          "cluster.name": "es-docker-cluster",
          "discovery.type": "single-node",
          "xpack.security.enabled": "false"
        },
        "customOptions": "--ulimit nofile=65536 --ulimit memlock=-1"
      }
    },
    {
      "label": "Compose local dev environment",
      "type": "docker-compose",
      "dockerCompose": {
        "up": {
          "detached": true,
          "build": true,
          "customOptions": "--force-recreate --remove-orphans"
        },
        "files": ["${workspaceFolder}/.dev/compose-local-dev-env.yml"]
      }
    },
    {
      "label": "Set server variables from .env",
      "type": "shell",
      "command": "set -a && source server/.env"
    },
    {
      "label": "html5 DEV",
      "type": "npm",
      "script": "dev:html5",
      "isBackground": true,
      "dependsOn": ["theme DEV"],
      "problemMatcher": {
        "owner": "custom",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": [
          {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Successfully compiled .*",
          "endsPattern": ".*webpack.*compiled with .*"
        }
      }
    },
    {
      "label": "theme DEV",
      "type": "npm",
      "script": "dev:theme",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": [
          {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Successfully compiled.*",
          "endsPattern": ".*The watcher is ready.*"
        }
      }
    },
    {
      "label": "plugin DEV",
      "type": "npm",
      "script": "dev:plugin",
      "isBackground": true,
      "dependsOn": ["theme DEV"],
      "problemMatcher": {
        "owner": "custom",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": [
          {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Successfully compiled.*",
          "endsPattern": ".*The watcher is ready.*"
        }
      }
    }
  ]
}
