{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compose local dev environment",
      "type": "docker-compose",
      "dockerCompose": {
        "up": {
          "detached": true,
          "build": true,
          "customOptions": "--force-recreate --remove-orphans",
        },
        "files": ["${workspaceFolder}/.dev/compose-local-dev-env.yml"],
      }
    },
    {
      "label": "html5 DEV",
      "type": "npm",
      "script": "dev:html5",
      "isBackground": true,
      "dependsOn": ["theme DEV"],
      "problemMatcher": {
        "owner": "custom",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": [
          {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Successfully compiled .*",
          "endsPattern": ".*webpack.*compiled with .*"
        }
      }
    },
    {
      "label": "theme DEV",
      "type": "npm",
      "script": "dev:theme",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": [
          {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Successfully compiled.*",
          "endsPattern": ".*The watcher is ready.*"
        }
      }
    },
    {
      "label": "plugin DEV",
      "type": "npm",
      "script": "dev:plugin",
      "isBackground": true,
      "dependsOn": ["theme DEV"],
      "problemMatcher": {
        "owner": "custom",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": [
          {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Successfully compiled.*",
          "endsPattern": ".*The watcher is ready.*"
        }
      }
    }
  ]
}
